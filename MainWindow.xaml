<Window x:Name="webBrowser" x:Class="WPFChromiumBrowser.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFChromiumBrowser"
        xmlns:cef="clr-namespace:CefSharp.Wpf;assembly=CefSharp.Wpf"
        mc:Ignorable="d"
        Title="WebBrowser" Height="720" Width="1024">
    <Grid>
        <cef:ChromiumWebBrowser x:Name="Browser_Test" FrameLoadEnd="ChromiumWebBrowser_OnFrameLoadEnd"/>
        <DockPanel Height="39" HorizontalAlignment="Center" VerticalAlignment="Top" Width="1024" ClipToBounds="True">
            <Button Content="⟳" Name="buttonRefresh" Click="buttonRefresh_Click" Height="30" Width="30" VerticalAlignment="Center" RenderTransformOrigin="0,0" Margin="5,0,0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left"/>
            <Button Content="&lt;" Name="buttonBack" Click="buttonBack_Click" Height="30" Width="30" RenderTransformOrigin="0,0" Margin="10,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="&gt;" Name="buttonForward" Click="buttonForward_Click" Height="30" Width="30" VerticalContentAlignment="Center" RenderTransformOrigin="0,0" Margin="2,0,0,0" HorizontalAlignment="Left" VerticalAlignment="Center"/>
            <Button Content="Go" Name="buttonGoTo" Click="buttonGoTo_Click" Height="30" Width="30" VerticalContentAlignment="Center" VerticalAlignment="Center" RenderTransformOrigin="0,0" HorizontalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0"/>
            <TextBox Name="boxSearch" Height="30" RenderTransformOrigin="0.5,0" Margin="2,0,0,0" Width="753"/>
            <Button Content="Close Tab" Name="buttonCloseTab" Click="buttonCloseTab_Click" Height="30" Width="55" RenderTransformOrigin="1,0" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" ClipToBounds="True" UseLayoutRounding="True" Margin="2,0,0,0"/>
            <Button Content="New Tab" Name="buttonNewTab" Click="buttonNewTab_Click" Height="30" Width="55" HorizontalAlignment="Right" VerticalAlignment="Center" RenderTransformOrigin="1,0" Margin="0,0,5,0"/>
        </DockPanel>
        <TabControl x:Name="tabControl" Margin="0,39,0,0">

        </TabControl>
    </Grid>
</Window>


